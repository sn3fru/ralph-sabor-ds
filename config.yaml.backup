pipeline:
  mode: "DEV" # Mude para PROD quando quiser treinar pesado (500 árvores)
  run_shap: false # SHAP desabilitado no modo DEV para acelerar. Mude para true em PROD.

feature_selection:
  correlation_threshold: 0.98 # Permissivo no início

xgboost_params:
  # Começando com uma configuração padrão de mercado
  objective: "binary:logistic"
  eval_metric: "auc"
  max_depth: 6
  learning_rate: 0.05
  min_child_weight: 1
  gamma: 0
  subsample: 0.8
  colsample_bytree: 0.8
  n_estimators_dev: 100
  n_estimators_prod: 500
  scale_pos_weight: "auto" # Será calculado no código

business_params:
  ticket_medio: 10000
  ganho_tp: 1500
  perda_fp: -10000
